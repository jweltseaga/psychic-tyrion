.action
  box-shadow inset 1px 1px 5px rgba(20,20,20,.35), inset -1px -1px 5px rgba(20,20,20,.35), 1px 1px 5px rgba(20,20,20,.35), -1px -1px 5px rgba(20,20,20,.35)
  border 1px solid #fff
  line-height 20px
  text-align center
  display inline-block
  margin 5px
  padding 6px 10px
  transition 0.3s all
  background #c0c0c0
  color #fff
  min-width 60px
  font-size 12px

  &:hover
    color darken(#c0c0c0,20)
    background #fff

  &.danger
    background rgba(darken(red,15), .65)
    
    &:hover
      background rgba(darken(red,15), .85)
      border 1px solid rgba(darken(red,15), .65) 
      color #fff

  &.info
    background rgba(37, 77, 165, .65)
    
    &:hover
      background rgba(37, 77, 165, .95)
      border 1px solid rgba(37, 77, 165, .65)
      color #fff

  &.primary
    background rgba(83, 128, 24, .65)
    
    &:hover
      background rgba(83, 128, 24, .85)
      border 1px solid rgba(83, 128, 24, .95)
      color #fff

