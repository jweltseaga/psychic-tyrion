@import '_mixins';

helvetica = Arial, Helvetica, sans-seriff

*
  margin 0
  padding 0
  outline 0
  border 0
  font-family helvetica

body,html
  height 100%
  width 100%
  background #f5f5f5

.hidden
  display none

#overlay
  position fixed
  height 100%
  width 100%
  z-index 49999
  background #333
  background rgba(#333,.65)
  display none
  top 0px
.flash
  position fixed
  border 1px solid #254da5
  padding-bottom 10px
  background #254da5
  background rgba(darken(#254da5,25), .85)
  width 600px
  left 50%
  margin-left -300px
  top 33%
  z-index 50000
  box-shadow -6px 8px 12px rgba(darken(#254da5,35), .85)
  display none
  h1 
    font-weight:normal
    border-bottom 1px solid rgba(#254da5,.25) 
    padding 5px 
    text-align center
    color #f5f5f5
    margin-bottom 10px
  p
    padding 5px
    font-size 12px
    color #f5f5f5
    text-align center

.application
  height 100%
  width 100%
  position relative
  

.content
  width 960px
  margin 0 auto
  position relative
  
  .page-header
    padding 20px 0px 10px 0px
    background url('../images/icon-seaga-logo.png') no-repeat 700px 20px
    position relative

    #campaign-header
      font-size 24px
      margin-left 35px
      margin-top 0px
      line-height 60px
      color #005ca7

  .campaign-image-container
    padding 20px 20px 0px 20px
    position relative

    form#contact
      border 2px solid #fff
      box-shadow inset -1px 1px 5px rgba(#000,.60), inset 1px -1px 3px rgba(#000,.60), 1px 1px 3px rgba(#000,.60),  -1px -1px 3px rgba(#000,.60)
      width 250px
      position absolute
      z-index 2
      height 250px
      right 90px
      top 40px
      padding 10px
      background rgba(#fff,.95)

      ul
        display block
        li:not(.notify)
          height 32px
          padding 3px 0px
          display block
          padding 5px
        li
          position relative
          clear both
          label
            display block
            float left
            line-height 30px
            color darken(#c0c0c0,35)
            width 50px
            text-align right
           
          input
            display block
            float left
            padding 2px 1px
            line-height 20px
            width 150px
            border 1px solid #c0c0c0
            margin-left 15px
      .actions
        margin-top 2px
      .notify
        height 70px
        margin-top 10px
        em
          text-align center
          display block
          padding 3px 2px
          font-size 14px
          i
            font-weight bold
            color #005ca7
            margin-top 3px
            font-size 16px
          &.privacy
            font-size 12px
            padding 0px
            margin-bottom 3px

      a#form-submit
        box-shadow inset 1px 1px 5px rgba(20,20,20,.35), inset -1px -1px 5px rgba(20,20,20,.35), 1px 1px 5px rgba(20,20,20,.35), -1px -1px 5px rgba(20,20,20,.35)
        border 1px solid #fff
        background rgba(37, 77, 165, .65)
        color #fff
        transition all 0.3s
        margin-left 65px
        display block
        width 75px
        text-align center
        padding 10px 15px
        &:hover
          background rgba(37, 77, 165, .95)
          border 1px solid rgba(37, 77, 165, .65)
          
    
    #campaign-image
      display block
      margin 0 auto
      max-width 902px
      border 1px solid #c0c0c0
      transition all 0.3s

      &:hover
        border-color #005ca7
  
  .campaign-text-container
    width 904px
    margin 0 auto
    padding-top 30px

    .column
      float left
      padding-bottom 30px

      h1
        text-align center
        font-size 17px
        color darken(#005ca7,5)

      p
        color darken(#c0c0c0,35)
        text-align justify
        height 100px
        overflow hidden
        display block
        font-size 12px
        
        &:first-line
          font-size 1.05em
          font-weight bold
          font-style italic
          darken(#c0c0c0,45)

      img
        max-width 200px
        margin 0 auto
        display block
        border 1px solid #c0c0c0

    &[data-column-number='3']
      .column
        width 33%

        p
          padding 15px
          line-height 18px
          font-size 11px
    
    &[data-column-number='2']
      .column
        width 50%
        
        p
          padding 25px
          line-height 20px
          font-size 12px
    
    &[data-column-number='1']
      .column
        width 100%

